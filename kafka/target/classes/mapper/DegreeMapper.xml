<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.david.hlp.kafka.mapper.DegreeMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.david.hlp.kafka.entity.Degree">
        <id column="id" property="id"/>
        <result column="unique_id" property="uniqueId"/>
        <result column="city" property="city"/>
        <result column="degree" property="degree"/>
        <result column="salary" property="salary"/>
        <result column="experience" property="experience"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据uniqueId查询学历信息 -->
    <select id="getByUniqueId" resultMap="BaseResultMap">
        SELECT id, unique_id, city, degree, salary, experience, update_time
        FROM degree
        WHERE unique_id = #{uniqueId}
    </select>

    <!-- 插入学历信息 -->
    <insert id="insert" parameterType="com.david.hlp.kafka.entity.Degree">
        INSERT INTO degree (unique_id, city, degree, salary, experience, update_time)
        VALUES (#{uniqueId}, #{city}, #{degree}, #{salary}, #{experience}, #{updateTime})
    </insert>

</mapper>
